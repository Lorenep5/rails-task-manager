<% if @task.completed %>
  <p><strong>Task completed!</strong>
  <% else %>
    <p><strong><%= @task.title %></strong> does not seem to be completed...</p>
  <% end %>
<li><%= link_to 'Back to list', tasks_path %></li>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
